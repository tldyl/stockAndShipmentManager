Private Sub Form_Load()
    Adodc1.ConnectionString = PublicStr
    Adodc1.RecordSource = "select * from tbS_sell_DESC"
    Adodc1.Refresh
    Set DataGrid1.DataSource = Adodc1
    Adodc2.ConnectionString = PublicStr
    'ADO控件的RecordSource执行SQL语句
    Adodc2.RecordSource = "SELECT SUM(qty) AS qty, SUM(tsum) AS tsum FROM tbS_sell_DESC"
    Adodc2.Refresh
    SBar1.Panels(2).Text = "总数量：  " & Adodc2.Recordset.Fields(0)
    SBar1.Panels(3).Text = "总金额：  " & Format(Adodc2.Recordset.Fields(1), "#0.00")
    MDIForm1.SBar1.Panels(1).Text = "当前窗体是： " + Me.Caption
End Sub

Private Sub Form_Unload(Cancel As Integer)
    Unload Me
    MDIForm1.SBar1.Panels(1).Text = "当前窗体是： "
End Sub

Private Sub Toolbar1_ButtonClick(ByVal Button As MSComctlLib.Button)
    Select Case Button.Key
    Case Is = "数量"
        'ADO控件的RecordSource执行SQL语句
        Adodc1.RecordSource = "SELECT * FROM tbS_sell_DESC ORDER BY qty DESC"
        Adodc1.Refresh
    Case Is = "金额"
        Adodc1.RecordSource = "SELECT * FROM tbS_sell_DESC ORDER BY tsum DESC"
        Adodc1.Refresh
    Case Is = "退出"
        Unload Me
    End Select
End Sub
